while true; do
			
	sudo clear
	banner
	menu

	case $option in
		
		1)
		sudo ./$pwd/DDos_Wifi.sh
		exit 50
		;;
		
		
		2)
		sudo ./$pwd/DDos_Bluetooth.sh
		exit 50
		;;
		
		
		3)
		sudo ./$pwd/FAP.sh
		exit 50
		;;
		
			
		4)
		sudo less -F ./$pwd/README.md
		exit 50
		;;
		
